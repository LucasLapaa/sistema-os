// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")       
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model OrdemServico {
 
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  // Cabeçalho
  dataServico DateTime @default(now())

  // Cliente
  razSocial            String?
  cnpj                 String?
  endereco             String?
  cep                  String?
  bairro               String?
  municipio            String?
  tel                  String?
  localExecucaoServico String?

  // Balança
  marca            String?
  modelo           String?
  numSerie         String?
  inmetro          String?
  capacidadeKg     String?
  divisao          String?
  portaria         String?
  ano              Int?
  numSeloReparado  String?
  numLacreRetirado String?
  numLacreColocado String?

  // Serviço
  descricaoMaoDeObra String?

  // Valores
  valorMDO   Float? @default(0)
  valorVista Float? @default(0)
  valorPecas Float? @default(0)
  valorTotal Float? @default(0)

  // Assinaturas
  nomeCliente        String?
  tecnicoResponsavel String?
  rgCpfTecnico       String?
}