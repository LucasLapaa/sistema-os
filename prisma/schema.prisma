// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // MUDAMOS DE SQLITE PARA POSTGRESQL
  url      = env("POSTGRES_PRISMA_URL") // A Vercel vai preencher isso sozinha
  directUrl = env("POSTGRES_URL_NON_POOLING") // Necessário para Vercel Postgres
}

model OrdemServico {
  id        Int      @id // Vamos permitir inserir o ID manualmente (o 10311, etc)
  createdAt DateTime @default(now())

  // Cabeçalho
  dataServico DateTime @default(now())

  // Cliente
  razSocial             String?
  cnpj                  String?
  endereco              String?
  cep                   String?
  bairro                String?
  municipio             String?
  tel                   String?
  localExecucaoServico  String?

  // Balança
  marca            String?
  modelo           String?
  numSerie         String?
  inmetro          String?
  capacidadeKg     String?
  divisao          String?
  portaria         String?
  ano              Int?
  numSeloReparado  String?
  numLacreRetirado String?
  numLacreColocado String?

  // Serviço
  descricaoMaoDeObra String?

  // Valores
  valorMDO   Float? @default(0)
  valorVista Float? @default(0)
  valorPecas Float? @default(0)
  valorTotal Float? @default(0)

  // Assinaturas
  nomeCliente        String?
  tecnicoResponsavel String?
  rgCpfTecnico       String?
}